<% content_for :title, "Sign in" %>
<%
  if flash[:alert].present?
    resource.errors.add(:base, flash[:alert])
  end
%>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render partial: "pafs_core/error_summary", locals: { f: f } %>

  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">Sign in</h2>
      <div class="form-group">
        <%= f.govuk_email_field :email, autocomplete: "off", autofocus: true, width: 'one-half', class: 'form-control', label: { text: "Email address" } %>
        <%= f.govuk_password_field :password, autocomplete: "off", width: 'one-half', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign in", class: 'govuk-button' %>
      </div>

      <p><%= link_to t("reset_your_password_link"), new_password_path(resource_name) %></p>
      <p><%= link_to t("request_an_account_link"), new_account_request_path %></p>

    </div>
  </div>
<% end %>

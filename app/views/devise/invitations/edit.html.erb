<div class="grid-row">
  <div class="column-two-thirds">
    <%= pafs_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
      <%= f.error_header %>
      <%#= devise_error_messages! %>
      <%= f.hidden_field :invitation_token %>

      <h1 class="heading-large"><%= t 'devise.invitations.edit.header' %></h1>
      <div class="form-group">
        <%= f.password_field :password %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="form-group">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: 'button' %>
      </div>
    <% end %>
  </div>
</div>

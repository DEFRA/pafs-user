<% content_for :title, "Change password" %>
<% migrate_devise_errors_for resource %>
<%= pafs_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <h1 class="govuk-heading-l">Reset password</h1>
  <div class="form-hint password-instructions">Your password must contain a minimum of:
    <ul class="list-bullet">
      <li>8 characters</li>
      <li>1 capital letter</li>
      <li>1 lower-case letter</li>
      <li>1 numeric character</li>
    </ul>
    and must not be a password used previously.
  </div>
  <%= form_group(f, :base) do %>
    <%= error_message(f.object, :base) %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, class: "form-control", autocomplete: "off", label: "New password" %>
    <%= f.password_field :password_confirmation, class: "form-control",
          autocomplete: "off", label: "Confirm password" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Reset password", class: "button" %>
  </div>
<% end %>
